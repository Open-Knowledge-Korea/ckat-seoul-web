<div id="title-panel">
        <h1>Cultural Facilities</h1>
</div>
    
<div id="content">
	<table width="100%">
		<tr>	
		    <td id="left-panels" width="20%">
			<div ex:role="facet" ex:facetClass="TextSearch"></div>
				<div ex:role="facet" ex:expression=".type" ex:facetLabel="class_name"></div>
				<div ex:role="facet" ex:expression=".gu" ex:facetLabel="ko-gu?"></div>
				<div ex:role="facet" ex:expression=".dong" ex:facetLabel="ko-dong?"></div>
				<div ex:role="facet" ex:expression=".entryFee" ex:facetLabel="entry fee?"></div>
		    </td>

			<td id="middle-column">
				<div ex:role="viewPanel" style="padding: 2em 0.5in;" valign="middle">
					<div ex:role="view"
					ex:viewClass="Thumbnail"
					ex:showAll="true"
					ex:orders=".id"
					ex:possibleOrders=".label">
						<div ex:role="lens" class="cThumbnail" style="display: none;">
							<div class="name"><span ex:content=".label"></span></div>
							<div class="line"></div>
							<div class="img"><img ex:src-content=".img" onerror="this.src='./noImage.gif'"/></div>
							<div><span class="m" ex:content=".id"></span></div>
							
						</div>
					</div>
				</div>

			</td>
			<td>
			<div id="popupContact"  style="overflow-y:scroll;width:600px;height:500px">
				<a id="popupContactClose">x</a>
				<h1 id="titleText"></h1>			
				<p id="contactArea"></p>
			</div>
			<div id="backgroundPopup"></div>
		    </div>
			</td>
		</tr>
	</table>	
